            <TextBlock x:Name="StatusText" Text="Waiting for headset..." Foreground="White" FontSize="14" Panel.ZIndex="10" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Opacity="0" IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window>
