                                <Rectangle x:Name="HeadsetBackground" HorizontalAlignment="Left" Height="40" Stroke="Black" VerticalAlignment="Center" Width="39" StrokeThickness="0">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <LinearGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
                                                    <TranslateTransform X="0"/>
                                                </TransformGroup>
                                            </LinearGradientBrush.RelativeTransform>
                                            <GradientStop Color="#FF18B24F" Offset="1"/>
                                            <GradientStop Color="#FF4CC730" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                
                                <Button x:Name="HeadsetDropDown"
                                    Click="HeadsetDropDown_Click"
                                    Width="18" Height="40"
                                    BorderThickness="0,0,0,0" Margin="42,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="Hand">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <LinearGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                                    <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </LinearGradientBrush.RelativeTransform>
                                            <GradientStop Color="#FF4CC730" Offset="0"/>
                                            <GradientStop Color="#FF18B24F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Grid>
                                        <Polygon Points="0,0 10,0 5,4" Fill="White"/>
                                    </Grid>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                                                            <Grid>
                                                                <Rectangle x:Name="BackgroundImage" Opacity="0">
                                                                    <Rectangle.Fill>
                                                                        <SolidColorBrush Color="Black" Opacity=".5"/>
                                                                    </Rectangle.Fill>
                                                                </Rectangle>
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation
                                                            Storyboard.TargetName="BackgroundImage"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1" Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation
                                                            Storyboard.TargetName="BackgroundImage"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0" Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                            </Grid>
                        </Border>

                        <TextBlock x:Name="HeadsetText" Canvas.Left="58" Canvas.Top="13" Foreground="#FF4CC730" FontSize="14" VerticalAlignment="Center" FontWeight="Bold" Text="Charge 100%" HorizontalAlignment="Center" Height="20" Width="86" Grid.Row="1" TextAlignment="Center"/>

                        <Border Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="8" Width="96">
                            <Grid>
                                <Rectangle HorizontalAlignment="Center" Height="7" Stroke="Black" VerticalAlignment="Center" Width="96" StrokeThickness="0" Grid.Row="2" Fill="#FF525A66"/>
                                <Rectangle x:Name="HeadsetProgress" HorizontalAlignment="Left" Height="7" Stroke="Black" VerticalAlignment="Center" Width="48" StrokeThickness="0" Grid.Row="2" Fill="#FF4CC730"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!--Right Controller-->
                <Border x:Name="ControllerRight" Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="41*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="8*"/>
